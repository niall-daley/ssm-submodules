#!/bin/bash

set -o errexit
set -o xtrace
umask 0000

. $(dirname $0)/vars

PACKAGES=("${packages[@]}")

usage () {
    cat <<EOF
Usage: $0 [OPTIONS] [PACKAGES]

    The following options may be given:
        --help) usage ;;

    The following packages may be given:
        ${packages[@]}

Example $0 ssm-client ssm-dashboards
EOF
        exit 1
}

shell_quote_string() {
  echo "$1" | sed -e 's,\([^a-zA-Z0-9/_.=-]\),\\\1,g'
}

build_rpms() {
    mkdir -vp ${result_dir} ${tmp_dir}

    pids=()
    for package in $(echo ${PACKAGES[@]}); do
        local volume_name=ssm-8-${package}-mock-cache
        docker volume create ${volume_name}
        docker run --privileged -e ENV_DEV --rm -v ${volume_name}:/var/cache/mock -v ${root_dir}:/home/builder/ssm-submodules ${rpmbuild_docker_image} sh -c "
            set -o errexit
            set -o xtrace
            umask 0000

            /home/builder/ssm-submodules/build/bin/build-rpm ${package}
        " & pids+=($!)
    done
    for pid in "${pids[@]}"; do
        wait "${pid}"
    done
}

main() {
    declare -a TMP_PACKAGES

    for arg do
        val=`echo "$arg" | sed -e 's;^--[^=]*=;;'`
        case "$arg" in
            --help)         usage ;;
            -*)             usage ;;
            *)              TMP_PACKAGES+=(`shell_quote_string "$arg"`) ;;
        esac
    done

    if [ ${#TMP_PACKAGES[@]} -gt 0 ]; then
        PACKAGES=("${TMP_PACKAGES[@]}")
    fi

    if [[ -n "${WITHOUT_DOCKER}" ]] && [[ ${WITHOUT_DOCKER} -eq 1 ]]; then
        for package in ${PACKAGES[@]}; do
            ${bin_dir}/build-rpm ${package}
        done
    else
        build_rpms
    fi
}

main $@