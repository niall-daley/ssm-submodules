#!/bin/bash

set -o errexit
set -o xtrace
umask 0000

. $(dirname $0)/vars

PACKAGES=("${packages[@]}")

usage () {
    cat <<EOF
Usage: $0 [OPTIONS] [PACKAGES]

    The following options may be given:
        --help) usage ;;

    The following packages may be given:
        ${packages[@]}

Example $0 ssm-client ssm-dashboards
EOF
        exit 1
}

shell_quote_string() {
  echo "$1" | sed -e 's,\([^a-zA-Z0-9/_.=-]\),\\\1,g'
}

build_srpms() {
    docker run --rm -e ENV_DEV -v ${root_dir}:/home/builder/ssm-submodules --mount 'type=volume,src=ssm-build-cache,dst=/mnt/cache' --tmpfs '/mnt/tmp:uid=1000,gid=1000' ${rpmbuild_docker_image} sh -c "
    	/home/builder/ssm-submodules/build/bin/build-srpm all
    "
}

main() {
    declare -a TMP_PACKAGES

    for arg do
        val=`echo "$arg" | sed -e 's;^--[^=]*=;;'`
        case "$arg" in
            --help)         usage ;;
            -*)             usage ;;
            *)              TMP_PACKAGES+=(`shell_quote_string "$arg"`) ;;
        esac
    done

    if [ ${#TMP_PACKAGES[@]} -gt 0 ]; then
        PACKAGES=("${TMP_PACKAGES[@]}")
    fi

    if [[ -n "${WITHOUT_DOCKER}" ]] && [[ ${WITHOUT_DOCKER} -eq 1 ]]; then
        local pids=()
        for package in ${PACKAGES[@]}; do
            ${bin_dir}/build-srpm ${package} & pids+=($!)
        done
        for pid in "${pids[@]}"; do
            wait "${pid}"
        done
    else
        mkdir -vp ${result_dir} ${docs_dir} ${logs_dir} ${tmp_dir}
        build_srpms
    fi
}

main $@
